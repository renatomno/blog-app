<h2> Articles </h2>

<% @articles.each do |article| %>
    <span>Id: </span> <%= article.id %> <br />
    <span>Nome:  </span> <a href="/articles/<%= article.id %>"> <%= article.title %> </a>  <br />
    <span>Descrição: </span> <%= article.body %>  <br />
    <span>Criado em: </span> <%= article.created_at %>  <br />
    <span>Atualizado em: </span> <%= article.updated_at %>  <br />
<% end %>